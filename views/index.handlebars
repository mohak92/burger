<div class="container">
    <div class="row">
        <div class="col-md-12">
            <img src="/assets/img/burgers.gif" alt="Burger" class="center" height="250" width="250">
        </div>
    </div>
    <br /><br />
    <div class="row">
        <div class="col-md-12">
            <h1>Eat-da-Burger!</h1>
        </div>
    </div>
    <br /><br />
    <div class="row">
        <div class="col-md-6 col-lg-6">
            <h2>Burgers Available!</h2>

            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-md-6 col-lg-6">
            <h2>Burgers Devoured!</h2>

            <ol>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
    <div class="row align-items-center">
        <div class="col-md-6 col-lg-6">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>